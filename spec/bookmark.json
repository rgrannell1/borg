{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/product.schema.json",
  "title": "Bookmark",
  "description": "A Borg Bookmark",
  "type": "object",
  "properties": {
    "url": {
      "description": "The URL being bookmarked",
      "type": "string"
    },
    "id": {
      "description": "A globally unique ID for the bookmark",
      "type": "string"
    },
    "selection": {
      "description": "The text selected while bookmarking",
      "type": "string"
    },
    "created_at": {
      "description": "The date in ISO format",
      "type": "string"
    }
  },
  "required": [ "url", "id", "selection", "created_at" ]
}
