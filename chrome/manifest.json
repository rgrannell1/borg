{
  "name": "Borg",
  "author": "Róisín Grannell",
  "description": "Store bookmarks to a private endpoint",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "js/borg-plugin.js"
  },
  "browser_action": {
    "default_icon": {},
    "default_popup": "chrome/popup.html",
    "default_title": "Borg"
  },
  "commands": {
    "saveBookmark": {
      "description": "Save bookmark",
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
      }
    }
  },
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png"
  },
  "options_page": "chrome/options.html",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ]
}
