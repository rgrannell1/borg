{
  "name": "Borg",
  "short_name": "Borg",
  "author": "Róisín Grannell",
  "description": "A toolbar button to bookmark selections via CloudEvents",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png"
  },
  "action": {
    "browser_style": true,
    "default_icons": {
      "16": "icons/16x16.png",
      "32": "icons/32x32.png"
    },
    "default_popup": "pages/popup/popup.html",
    "default_title": "Borg",
    "theme_icons": [
      {
        "light": "icons/16x16.png",
        "dark": "icons/16x16.png",
        "size": 16
      },
      {
        "light": "icons/32x32.png",
        "dark": "icons/32x32.png",
        "size": 32
      }
    ]
  },
  "commands": {
    "save-bookmark": {
      "description": "Save bookmark",
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
      }
    }
  },
  "options_page": "pages/options/options.html",
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ]
}
